doctype html
html(lang='en')
  head
    title Signup Page
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    link(href='https://fonts.googleapis.com/css?family=Dosis', rel='stylesheet', type='text/css')
    link(rel='stylesheet', type='text/css', href='/assets/styles.css')
  body
    div#container
      div.navbar
        div.navHome
          a(href='/') The Collective
        div.navLinkContainer
          a(href='/page1') Game Page
          a(href='/scorePage') High Scores
          a(href='/documentation') Documentation
          a(href='/logout') Log Out
      div.login_pageContent
        div.column_1
          div.loginContainer
            h3 Sign Up
            p#errorMessage.hidden
            form#signupForm(class='signupForm', name='signupForm', action='/signup', method='POST')
              label(for='username') Username: 
              input#user(type='text', name='username', placeholder='username')
              label(for='pass') Password: 
              input#pass(type='password', name='pass', placeholder='password')
              label(for='pass2') Password: 
              input#pass2(type='password', name='pass2', placeholder='retype password')
              input(type='hidden', name='_csrf', value='#{csrfToken}')
              a#signupSubmit(class='formSubmit', href='#') Sign up
block scripts
    script(src='/assets/client.js')
